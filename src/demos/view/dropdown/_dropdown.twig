{% extends '@box.twig' %}

{% set box = {
    root: 'Dropdown',
    showSkeleton: false,
}|merge(box ?? {}) %}

{% block box_content %}
    <ul class="{{ r }}">

        <!-- Menu item #1 -->
        <li class="{{ r }}__li">

