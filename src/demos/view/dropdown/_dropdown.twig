                data-toggle-target="dropdown-1"
                data-toggle-class="{{ r }}__button--active"
                data-toggle-abort="escape clickout"
            >Item one</a>

            <!-- Submenu -->
            <ul
                class="{{ r }}__content {{ r }}__content--hidden"
                data-toggle-name="dropdown-1"
                data-toggle-class="{{ r }}__content--hidden"
            >
                <li class="{{ r }}__content-li">
                    <a class="{{ r }}__content-link">Subitem one</a>
                </li>
