        </div>

        <!-- Toggle button -->
        <p class="{{ r }}__button-row">
            <button
                class="{{ r }}__button"
                data-toggle-target="text"
                data-toggle-class="{{ r }}__button--active"
            >
                <span class="{{ r }}__button-text {{ r }}__button-text--more">Show more &darr;</span>
                <span class="{{ r }}__button-text {{ r }}__button-text--less">Show less &uarr;</span>
            </button>
        </p>
    </div>
{% endblock %}
