{% extends '@layout.twig' %}

{% set demosDir = 'https://github.com/vyvrhel/class-toggler/blob/master/docs/' %}
{% set demos = [
    {
        title: 'More / Less',
        link: '010-more-less.html',
        source: demosDir ~ '010-more-less.html',
        includes: [
            'more-less/_more-less.twig',
        ],
    },
    {
        title: 'Dropdown',
        link: '020-dropdown.html',
        source: demosDir ~ '020-dropdown.html',
        includes: [
            'dropdown/_dropdown.twig',
        ],
    },
    {
        title: 'Tabs',
        link: '030-tabs.html',
        source: demosDir ~ '030-tabs.html',
        includes: [
            'tabs/_tabs.twig',
        ],
    },
    {
        title: 'Accordion',
        link: '040-accordion.html',
        source: demosDir ~ '040-accordion.html',
        includes: [
            'accordion/_accordion.twig',
        ],
    },
    {
        title: 'Modal',
        link: '050-modal.html',
        source: demosDir ~ '050-modal.html',
        includes: [
            'modal/_modal.twig',
            'modal/_modal-toggler.twig',
        ],
    },
    {
        title: 'Focused content',
        link: '060-focus.html',
        source: demosDir ~ '060-focus.html',
        includes: [
            'focus/_focus.twig',
        ],
    },
    {
        title: 'Media query',
        link: '070-query.html',
        source: demosDir ~ '070-query.html',
        includes: [
            'modal/_modal--lg.twig',
            'modal/_modal-toggler--lg.twig',
        ],
    },
] %}

{% block styles %}
    {% include 'css/_normalize.css' %}
    {% include 'css/_header.css' %}
    {% include 'css/_demo.css' %}
    {% include 'more-less/_more-less.css' %}
    {% include 'dropdown/_dropdown.css' %}
    {% include 'tabs/_tabs.css' %}
    {% include 'accordion/_accordion.css' %}
    {% include 'modal/_modal.css' %}
    {% include 'modal/_modal-toggler.css' %}
    {% include 'focus/_focus.css' %}
{% endblock %}

{% block content %}

    {% include 'index/_header.twig' %}

    {% for demo in demos %}
        {% include 'index/_demo.twig' %}
    {% endfor %}

{% endblock %}
